    "version": "0.2.0",
    "configurations": [
        // Hot Reload configs
        // Windows configs (only difference from linux/mac is "type" and "program")
        {
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Hot Reload: Build and Run",
            "name": "Hot Reload: Build and Run (Windows)",
            "args": [],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/game_hot_reload.exe",
        },

        // Linux / Mac configs
        {
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Hot Reload: Build and Run",
            "name": "Hot Reload: Build and Run (Linux / Mac)",
            "args": [],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/hot_reload/game_hot_reload",
        },

        // Make Debug and Release configs
        {
            "name": "Debug (Make)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "windows": {
                "program": "${workspaceFolder}/build/game.exe",
                "miDebuggerPath": "C:/Dev/msys2/mingw64/bin/gdb.exe"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "build debug"
        },
        {
            "name": "Release (Make)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/game",
